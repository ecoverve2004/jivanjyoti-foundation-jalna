<%- include('partials/header') %>

<section class="py-16 bg-gray-100 min-h-screen flex items-center">
    <div class="container mx-auto px-4 text-center">
        <div class="max-w-2xl mx-auto">
            <i class="fas fa-exclamation-circle text-8xl text-red-500 mb-8"></i>
            <h1 class="text-6xl font-bold text-gray-800 mb-4">500</h1>
            <h2 class="text-3xl font-semibold text-gray-600 mb-6">Server Error</h2>
            <p class="text-lg text-gray-500 mb-8">
                Something went wrong on our server. We're working to fix this issue. Please try again later.
            </p>
            <% if (typeof error !== 'undefined' && error.stack && process.env.NODE_ENV === 'development') { %>
            <details class="bg-red-50 p-4 rounded-lg text-left mb-8">
                <summary class="cursor-pointer text-red-700 font-semibold">Error Details (Development Mode)</summary>
                <pre class="mt-4 text-sm text-red-600 overflow-auto"><%= error.stack %></pre>
            </details>
            <% } %>
            <div class="space-x-4">
                <a href="/" class="inline-block bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-8 rounded-full transition duration-300">
                    Go Home <i class="fas fa-home ml-2"></i>
                </a>
                <a href="javascript:history.back()" class="inline-block bg-gray-600 hover:bg-gray-700 text-white font-bold py-3 px-8 rounded-full transition duration-300">
                    Go Back <i class="fas fa-arrow-left ml-2"></i>
                </a>
            </div>
        </div>
    </div>
</section>

<%- include('partials/footer') %>